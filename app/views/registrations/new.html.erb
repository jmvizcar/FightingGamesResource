<div class='container'>
  <h1>Sign Up</h1>
  <%= form_with model: @user do |f| %>
    <p>
      <%= f.label :email, 'email: ' %><br/>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password, 'password: ' %><br/>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation, 'password confirmation: ' %><br/>
      <%= f.password_field :password_confirmation %>
    </p>
    <p>
      <%= f.submit 'Sign Up' %>
    </p>
  <% end %>
</div>